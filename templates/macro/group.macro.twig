                        <div class="fw-bold">{{ discussion.owner.fullName }}</div>
                        <div>{{ discussion.createdAt|format_datetime(timezone=regional.regionalSettingValueObject.timezone,pattern=date_time_pattern) }}</div>
                    </div>
