{% macro card(event, hasMap = false, hasLink = false, hasHeader = false) %}
    <div class="card mb-2">
        {% if event.eventGroup and hasHeader %}
            <div class="list-group list-group-flush">
                <a href="{{ path('event_group_show', {id: event.eventGroup.id}) }}"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div class="bi bi-people-fill fs-4"></div>
                    <div class="fw-bold">{{ event.eventGroup.name }}</div>
                </a>
            </div>
        {% endif %}
        {% if event.base64Image %}
            <img src="{{ event.base64Image }}"
                 class="{{ event.eventGroup == null ? 'card-img-top' : '' }} object-fit-cover"
                 height="150px"
                 alt="{{ event.title }}">
        {% endif %}
        {% if event.isInProgress(regional.regionalSettingValueObject.timezone) %}
            <div {{ stimulus_controller('progress', {
                elapsed: event.elapsedTimeInMinutes,
                duration: event.durationInMinutes
            }) }}>
                <div class="progress rounded-0" style="height:5px" data-bs-toggle="tooltip"
                     data-bs-placement="top"
                     data-bs-title="{{ event.timeRemainingAsInterval }} {{ 'remaining'|trans }}">
                    <div {{ stimulus_target('progress', 'progressBar') }}
                            class="progress-bar bg-success" role="progressbar"
                            aria-valuenow="0"
                            aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        {% elseif event.isComplete(regional.regionalSettingValueObject.timezone) %}
            <div class="progress rounded-0" style="height:3px" role="progressbar"
                 aria-label="Basic example" aria-valuenow="0" aria-valuemin="0"
                 aria-valuemax="100">
                <div class="progress-bar bg-success" style="width: 100%"></div>
            </div>
        {% else %}
            <div class="progress rounded-0" style="height:3px" role="progressbar"
                 aria-label="Basic example" aria-valuenow="0" aria-valuemin="0"
                 aria-valuemax="100">
                <div class="progress-bar" style="width: 0"></div>
            </div>
        {% endif %}
        <div class="list-group list-group-flush">
            <a href="{{ path('show_event', {id: event.id}) }}" class="list-group-item list-group-item-action">
                <div class="fw-bold {{ event.isComplete(regional.regionalSettingValueObject.timezone) ? 'text-decoration-line-through' : '' }}">{{ event.title }}</div>
            </a>
            <div class="list-group-item d-flex justify-content-around align-items-center">
                <div class="d-flex justify-content-start align-items-center">
                    <div class="mdi mdi-ray-start fs-4 me-2 text-muted"></div>
                    <div>
                        {{ event.startAt|format_datetime(timezone=regional.regionalSettingValueObject.timezone,pattern=date_time_pattern) }}
                    </div>
                </div>
                <div class="mdi mdi-ray-vertex fs-4 mx-1 text-muted"></div>
                <div class="d-flex justify-content-end align-items-center">
                    <div>{{ event.endAt|format_datetime(timezone=regional.regionalSettingValueObject.timezone,pattern=date_time_pattern) }}</div>
                    <div class="mdi mdi-ray-end fs-4 ms-2 text-muted"></div>
                </div>
            </div>
            <div class="list-group-item d-flex d-flex justify-content-between align-items-center"
                    {{ stimulus_controller('clipboard', {
                        successContent: "<span class='bi bi-check-lg text-success fs-4'></span>"
                    }) }}
            >
                <div value="{{ event.address }}" {{ stimulus_target('clipboard', 'source') }} >{{ event.address }}</div>
                <a href="#" {{ stimulus_action('clipboard', 'copy', 'click') }} {{ stimulus_target('clipboard', 'button') }} >
                    <span class="bi bi-copy fs-4"></span>
                </a>
            </div>
            <div class="list-group-item d-flex justify-content-start flex-nowrap overflow-y-hidden overflow-x-scroll">
                {% for category in event.categories %}
                    <span class="badge rounded-pill text-bg-light fw-light fs-6 me-1 mb-1">{{ category.title|trans }}</span>
                {% endfor %}
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            {% if hasMap %}
                <a class="btn btn-secondary" data-bs-toggle="offcanvas"
                   data-bs-target="#map-offcanvas"
                   aria-controls="#map-offcanvas" {{ stimulus_action('dynamic-map', 'flyToAssetOnMap', 'click', {
                    id:  event.id,
                    longitude: event.longitude,
                    latitude: event.latitude
                }) }}>
                    <span class="bi bi-crosshair"></span>
                </a>
            {% endif %}
            {% if hasLink %}
                <a class="btn btn-outline-primary"
                   href="{{ path('show_event', {id: event.id}) }}">{{ 'view-event'|trans }}</a>
            {% endif %}
        </div>
    </div>
{% endmacro %}