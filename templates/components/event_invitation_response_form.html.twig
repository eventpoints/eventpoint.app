<div {{ attributes }} class="list-group list-group-flush list-group-horizontal">
    {% if eventInvitation.event.isAttending(eventInvitation.owner) %}
        <div class="list-group-item border-0 rounded-0 text-center w-100">
            <div class="bi bi-check-circle text-success fs-4"></div>
            <div>{{ 'response-sent'|trans }}</div>
        </div>
    {% else %}
        <a href="{{ path('show_event', {id: eventInvitation.event.id}) }}"
           class="list-group-item list-group-item-action border-0 rounded-0 d-flex justify-content-start align-items-center w-75">
            <div class="me-3">
                <img src="{{ eventInvitation.event.base64Image }}"
                     class="rounded-circle object-fit-cover border"
                     height="50" width="50"/>
            </div>
            <div>
                <div class="fw-bold">{{ eventInvitation.event.title }}</div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mdi mdi-ray-start fs-4 text-muted"></div>
                    <div>{{ eventInvitation.event.startAt|format_datetime(timezone=regional.regionalSettingValueObject.timezone,pattern=date_time_pattern) }}</div>
                    <div class="mdi mdi-ray-vertex fs-4 text-muted"></div>
                    <div>{{ eventInvitation.event.endAt|format_datetime(timezone=regional.regionalSettingValueObject.timezone,pattern=date_time_pattern) }}</div>
                    <div class="mdi mdi-ray-end fs-4 text-muted"></div>
                </div>
            </div>
        </a>
        <a href="#" data-action="live#action" data-action-name="prevent|submit(isAttending=false)"
           class="list-group-item border-0 border-start rounded-0 list-group-item-action text-center w-25">
            <div class="bi bi-check-circle fs-4 text-primary"></div>
            <div>{{ 'accept-invitation'|trans }}</div>
        </a>
        <a href="#" data-action="live#action" data-action-name="prevent|submit(isAttending=false)"
           class="list-group-item border-0 border-start rounded-0 list-group-item-action text-center w-25">
            <div class="bi bi-x-circle fs-4 text-danger"></div>
            <div>{{ 'decline-invitation'|trans }}</div>
        </a>
    {% endif %}
</div>
