{% extends '../base.html.twig' %}
{% import "macro/group.macro.twig" as eventGroupMacro %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                <div class="card sticky-top">
                    <div class="card-header fw-bold">{{ 'filter'|trans|capitalize }}</div>
                    {{ form_start(eventGroupFilter) }}
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">{{ form_row(eventGroupFilter.keyword) }}</div>
                        <div class="list-group-item">{{ form_row(eventGroupFilter.category) }}</div>
                    </div>
                    <div class="card-footer bg-white">
                        <button type="button" href="{{ path('events') }}"
                                class="btn mb-3 w-100 btn-secondary">{{ 'clear'|trans }}</button>
                        <button type="submit"
                                class="btn w-100 btn-outline-primary">{{ 'search'|trans }}</button>
                    </div>
                    {{ form_end(eventGroupFilter) }}
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="row mb-3 g-2">
                    {% for eventGroup in eventGroupPagination %}
                        <div class="col-12 col-md-6">
                            {{ eventGroupMacro.minCard(eventGroup) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="my-5">
                    {{ knp_pagination_render(eventGroupPagination, viewParams={align: 'center', size: 'large'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}