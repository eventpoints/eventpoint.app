{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-3">
                <div class="card mb-3">
                    <div class="text-end">
                        <div class="dropdown">
                            <button class="btn btn-white shadow-none" type="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical fs-4"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img src="{{ user.avatar }}" class="rounded-circle border my-3" height="150"/>
                            <div class="fw-bold lead">{{ user.fullName }}</div>
                            <div class="mb-3">
                                <span class="bi bi-circle-fill text-success me-1"></span>
                                {{ user.createdAt|format_date }}</div>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('create_direct_conversation', {id: user.id}) }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>{{ 'send-message'|trans }}</div>
                            <div class="bi bi-chat fs-4"></div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="card">
                <div class="card-body">
                    <div>
                        <canvas height="100px" {{ stimulus_controller('event-activity-chart', {
                            events: userEventActivity|json_encode
                        }) }}></canvas>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

