{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card my-3">
                    <div class="card-body">
                        <div class="">
                            <h1 class="h3 mb-3 font-weight-normal">{{ 'register'|trans|capitalize }}</h1>
                        </div>
                        {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.email) }}
                        <div class="input-group mb-3" {{ stimulus_controller('password-visibility') }}>
                            {{ form_widget(registrationForm.plainPassword) }}
                            <button data-action="password-visibility#toggle" class="btn btn-outline-secondary"
                                    type="button" id="button-addon2">
                                <span data-password-visibility-target="icon" class="bi bi-eye-fill fs-4"></span>
                                <span data-password-visibility-target="icon" class="hidden bi bi-eye-slash-fill fs-4"></span>
                            </button>
                        </div>
                        <button type="submit" class="btn btn-lg mt-5 btn-primary w-100">{{ 'register'|trans }}</button>


                        {{ form_end(registrationForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
