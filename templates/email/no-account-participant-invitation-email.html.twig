{% extends 'email/base-email.html.twig' %}

{% block body %}
    <div class="card">
        <img class="card-img-top object-fit-cover" style="background-size: cover" height="250" src="{{ event.base64Image }}"/>
        <div class="card-body">
            <h1>{{ 'email-no-account-intro'|trans }}</h1>
            <p class="lead">{{ 'invitation-no-account-text'|trans({title: event.title, hostName: event.owner.fullName}) }} </p>
            <div class="text-center">
                <a class="btn btn-primary btn-lg w-100" target="_blank"
                   href="{{ path('show_event', {id: event.id}, relative=false) }}">{{ 'show-event'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
