{% extends 'email/base-email.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h1>{{ 'email-intro'|trans({firstName: target.fullName}) }}</h1>
            <p class="lead">{{ 'invitation-text'|trans({title: event.title}) }} </p>
            <div class="text-center">
                <a class="btn btn-primary btn-lg w-100" target="_blank"
                   href="{{ path('show_event', {id: event.id}, relative=false) }}">{{ 'show-event'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
