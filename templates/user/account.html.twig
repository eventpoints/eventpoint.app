{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                <div class="card">
                    {{ include('partials/_account-navbar.html.twig') }}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="fs-3 fw-bold text-end">{{ 'account'|trans|upper }}</div>
                <hr class="mt-0"/>

                {{ form_start(userAccountForm) }}
                <div class="card mb-5">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-6">{{ form_row(userAccountForm.firstName) }}</div>
                                <div class="col-6">{{ form_row(userAccountForm.lastName) }}</div>
                            </div>
                        </div>
                        <a href="{{ path('user_email_addresses') }}"
                           class="list-group-item list-group-item-action">
                            <div class="text-muted mb-3">{{ 'multiple-email-account-explainer'|trans }}</div>
                            <div class="d-flex justify-content-start align-items-center mb-3">
                                {% for email in app.user.emails %}
                                    <div class="badge m-1 rounded-pill {{ email == app.user.email ? 'text-bg-primary' : 'text-bg-secondary' }}">{{ email.address }}</div>
                                {% endfor %}
                            </div>
                        </a>
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            {{ form_row(userAccountForm.avatar) }}
                            <img height="100" class=" border" src="{{ app.user.avatar }}"/>
                        </div>
                        <div class="list-group-item">
                            {{ form_row(userAccountForm.locale) }}
                        </div>
                        <div class="list-group-item">
                            {{ form_row(userAccountForm.timezone) }}
                        </div>
                        <div class="list-group-item">
                            {{ form_row(userAccountForm.currency) }}
                        </div>
                        <div class="list-group-item">
                            {{ form_row(userAccountForm.country) }}
                        </div>
                        <a href="{{ path('change_user_password') }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div> {{ 'change-password'|trans|capitalize }}</div>
                            <div class="bi bi-key fs-3"></div>
                        </a>
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100">{{ 'save'|trans }}</button>
                    </div>
                </div>
                {{ form_end(userAccountForm) }}


                {{ form_start(phoneNumberForm) }}
                <div class="card mb-3">
                    <div class="card-header fw-bold">{{ 'phone-numbers'|trans|capitalize }}</div>
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">{{ 'phone-number-login-explainer'|trans }}</div>
                        <a href="{{ path('create_user_phone_number') }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>{{ 'add-phone-number'|trans }}</div>
                            <div class="bi bi-plus-circle fs-4"></div>
                        </a>
                    </div>
                    {{ form_row(phoneNumberForm.phoneNumber) }}
                    <div class="card-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100">{{ 'save'|trans }}</button>
                    </div>
                </div>
                {{ form_end(phoneNumberForm) }}


            </div>
        </div>
    </div>
    </div>
{% endblock %}