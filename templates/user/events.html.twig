{% extends 'base.html.twig' %}

{% import "macro/event.macro.twig" as eventMacro %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                <div class="card">
                    {{ include('partials/_account-navbar.html.twig') }}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="fs-3 fw-bold text-end">{{ 'your-events'|trans|upper }}</div>
                <hr/>
                <div class="list-group mb-3">
                    <a href="{{ path('create_event') }}"
                       class="list-group-item list-group-item-action text-muted d-flex justify-content-between align-items-center">
                        <div>{{ 'create-event'|trans|capitalize }}</div>
                        <div class="bi bi-plus-circle fs-4"></div>
                    </a>
                </div>
                <div class="row justify-content-between">
                    {% for event in events %}
                        <div class="col-12 col-md-6">
                            {{ eventMacro.card(event) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}