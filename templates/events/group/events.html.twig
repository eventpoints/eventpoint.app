{% extends 'base.html.twig' %}
{% import "macro/event.macro.twig" as eventMacro %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                {{ include('partials/_event-group-navbar.html.twig') }}
            </div>
            <div class="col-12 col-md-6">
                <div class="row justify-content-between g-2">
                    {% for event in eventGroup.events %}
                        <div class="col-12 col-md-6">
                            {{ eventMacro.card(event) }}
                        </div>
                    {% else %}
                        <div class="text-center text-muted fw-bold mt-5">{{ 'no-events-found'|trans|upper }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

