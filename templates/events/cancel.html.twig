{% extends 'base.html.twig' %}
{% import "macro/event.macro.twig" as eventMacro %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                {{ eventMacro.card(event) }}
            </div>
            <div class="col-12 col-md-6">
                {% if not event.isComplete %}
                    {{ form_start(eventCancellationForm) }}
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="fw-bold">{{ 'cancel-event'|trans }}</div>
                            <div class="bi bi-exclamation-triangle-fill text-danger fs-5"></div>
                        </div>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item">
                                {{ form_row(eventCancellationForm.reason) }}
                            </div>
                            <div class="list-group-item">
                                {{ form_row(eventCancellationForm.notice) }}
                            </div>
                            <div class="list-group-item">
                                {{ 'cancellation-warning '|trans }}
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-outline-danger">{{ 'cancel-event'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(eventCancellationForm) }}
                {% else %}
                    <div class="text-center">{{ 'can-not-cancel-unpublished-event'|trans }}</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}