{% extends 'base.html.twig' %}
{% import "macro/event.macro.twig" as eventMacro %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                {{ eventMacro.card(event) }}
                {{ include('partials/_event_settings_nav.html.twig') }}
            </div>
            <div class="col-12 col-md-8">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">{{ 'event-organisers'|trans }}</div>
                        {% for organiser in event.eventOrganisers %}
                            <div class="list-group-item d-flex justify-content-start">
                                <div class="me-2">
                                    <img height="50" class="rounded-circle" src="{{ organiser.owner.avatar }}"/>
                                </div>
                                <div>
                                    <div>{{ organiser.owner.fullName }}</div>
                                    {% for role in organiser.roles %}
                                        <span class="badge text-bg-primary">{{ role.name|trans }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}